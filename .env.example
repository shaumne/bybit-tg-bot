# Telegram Bot Settings
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get your chat ID from @userinfobot on Telegram 
TELEGRAM_CHAT_ID=your_chat_id_here

# Bybit API Credentials
# Generate API keys from Bybit dashboard: Account > API Management
BYBIT_API_KEY=your_api_key_here  
BYBIT_API_SECRET=your_api_secret_here

# Environment Settings
# Set to 'true' for testing, 'false' for live trading
TESTNET=true
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Trading Parameters
# Trading pair symbol (e.g., BTCUSDT, ETHUSDT)
TRADE_SYMBOL=MNTUSDT
# Trade quantity in USDT (minimum 5.0 USDT)
QUANTITY=7.0
# Leverage multiplier (1-100)
LEVERAGE=1
# Stop loss percentage (0-100)
STOP_LOSS_PERCENTAGE=2
# Take profit percentage (0-100)
TAKE_PROFIT_PERCENTAGE=4

# Monitoring Settings
# Interval between announcement checks (in seconds)
CHECK_INTERVAL=60
# Delay between retries on failure (in seconds)  
RETRY_DELAY=5
# Maximum number of retry attempts
MAX_RETRIES=3

# Advanced Settings
# Maximum position size in USDT
MAX_POSITION_SIZE=1000
# Minimum trade value in USDT
MIN_TRADE_VALUE=5.0

# Note: Replace all values with your actual credentials and preferred settings
# Keep this file secure and never commit it to version control
# For first time setup, copy this file to .env and update the values 